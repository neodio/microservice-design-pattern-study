<configuration>
    <appender name="FLUENTD_TCP" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>localhost:5170</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdc>true</includeMdc>
        </encoder>
    </appender>

    <!-- IDE 콘솔에도 같이 출력하려면 다음을 추가 -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="FLUENTD_TCP"/>
        <appender-ref ref="CONSOLE_JSON"/> <!-- IDE 콘솔에도 출력 -->
    </root>
</configuration>